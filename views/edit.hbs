<h1>{{title}} </h1>
<div>
    <form action="/users/edit" method="post">
        {{#each results}}
        <input type="hidden" value="{{this.id}}" name="id">
        <div class="form-group">
            <input type="text" name="name" value="{{this.name}}" placeholder="Name"  class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="email" value="{{this.email}}" placeholder="Email"  class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="age" value="{{this.age}}" placeholder="Age" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="password" value="{{this.password}}" placeholder="Password" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" name="submit" value="Submit" class="btn btn-success ">
        </div>
        {{/each}}
    </form>

</div>