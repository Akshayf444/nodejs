<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
	<body>
      <div class="container">
		{{#each pages}}
			<a href="/pages/{{this.slug}}">{{this.title}}</a>
		{{/each}}
		
		<h1>{{title}}</h1>
		
		<form action="/" method="post">

				<div class="form-group">
					<input type="text" name="email" value="{{this.email}}" placeholder="Email"  class="form-control">
				</div>

				<div class="form-group">
					<input type="password" name="password" value="{{this.password}}" placeholder="Password" class="form-control">
				</div>
				<div class="form-group">
					<input type="submit" name="submit" value="Submit" class="btn btn-success ">
				</div>
				<a href="/users/add" >Sign Up</a>
		</form>
      </div>
  </body>
</html>